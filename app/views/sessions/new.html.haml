#login
  .overlay
    .content
      .outter-form
        .form-header
          .circle-outter
            .circle-inner
              .circle-inner-inner
        .inner-form
          %h5.login-title Log In

          = form_for(:session, url: login_path, autocomplete: 'off') do |f|
            = @error

            %input(style="display:none;" type="text" name="somefakename")
            %input(style="display:none;" type="password" name="anotherfakename")

            .field.email
              = f.label :email, class: 'email'
              = f.email_field :email, class: 'email'
              .error.email

            .field.password
              = f.label :password, class: 'password'
              = f.password_field :password, class: 'password'
              .error.password

            .field.remember
              = f.label :remember_me, class: "checkbox inline" do
                = f.check_box :remember_me
                %span Remember me on this computer

            .field.submit
              = f.submit "Log in", class: 'sign-in-submit pink-button'

    .login-link
      %p.small-text
        New user?
        = link_to "Sign up now!", signup_path

