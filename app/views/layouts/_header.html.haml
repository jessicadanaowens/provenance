%header.navbar
  .container
    %nav
      .nav-left
        = link_to "Provenance-Art", root_path, id: "logo"
        -if logged_in?
          = link_to "Dashboard", dashboard_path, class: 'nav-link dashboard-link'

      .nav-right
        -if logged_in?
          %a.current-user-link.nav-link
            = current_user.email
            &#x25BC
          .current-user-dropdown
            %ul
              %li= link_to "Log out", logout_path, method: "delete"
        -else
          %a= link_to "Log in", login_path, class: 'nav-link'
          %a= link_to "Try it for free", '#sign-up', class: 'nav-link pink-outline-button anchorLink hide-mobile'